<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".SignUpActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/textsignup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:src="@drawable/signup"
            app:layout_constraintBottom_toTopOf="@+id/input_general"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/input_general"
            android:layout_width="388dp"
            android:layout_height="32dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="50dp"
            android:hint="Personal"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout38"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout38"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textsignup" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout38"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout2"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_general">

            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Name" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout2"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toTopOf="@+id/textPhone"
            app:layout_constraintEnd_toEndOf="@+id/textPhone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout38"
            app:layout_constraintVertical_chainStyle="spread_inside">

            <EditText
                android:id="@+id/input_dob"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Date of birth"
                android:inputType="date" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textPhone"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toTopOf="@+id/input_credentials"
            app:layout_constraintEnd_toEndOf="@+id/input_credentials"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout2">

            <EditText
                android:id="@+id/input_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Contact Number"
                android:inputType="phone" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/input_credentials"
            android:layout_width="388dp"
            android:layout_height="32dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="75dp"
            android:hint="Credentials"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/txtlogin"
            app:layout_constraintEnd_toEndOf="@+id/txtlogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textPhone" />

        <!-- Email Label -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtlogin"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toTopOf="@+id/txtpassword"
            app:layout_constraintEnd_toEndOf="@+id/txtpassword"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_credentials">

            <EditText
                android:id="@+id/input_emailid"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Email"
                android:inputType="textEmailAddress" />
        </android.support.design.widget.TextInputLayout>



        <!-- Password Label -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtpassword"
            android.layout_below="@+id/textlogin"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toTopOf="@+id/txtlogin"
            app:layout_constraintEnd_toEndOf="@+id/txtlogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_address">

            <EditText
                android:id="@+id/input_pwd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Password"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>


        <TextView
            android:id="@+id/input_address"
            android:layout_width="388dp"
            android:layout_height="32dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="75dp"
            android:hint="Address"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout39"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout39"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtpassword" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout39"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textPhone"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout40"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout40"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_address">

            <EditText
                android:id="@+id/input_addr1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Flat No/House No" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout40"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout41"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout41"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout39">

            <EditText
                android:id="@+id/input_addr2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Street" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout41"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout42"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout42"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout40">

            <EditText
                android:id="@+id/input_addr3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Apartment" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout42"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout43"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout43"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout41">

            <EditText
                android:id="@+id/input_addrcolony"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Colony" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout43"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout44"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout44"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout42">

            <EditText
                android:id="@+id/input_addrpin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Pin Code"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout44"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout45"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout45"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout43">

            <EditText
                android:id="@+id/input_addrcity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="City" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout45"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout46"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout46"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout44">

            <EditText
                android:id="@+id/input_addrstate"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:hint="State" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout46"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_signup"
            app:layout_constraintEnd_toEndOf="@+id/input_address"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout45">

            <EditText
                android:id="@+id/input_addrcountry"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Country" />
        </android.support.design.widget.TextInputLayout>
        <!--android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="54dp"
          android:layout_alignParentBottom="true"
          android:layout_alignParentStart="true"
          android:layout_marginBottom="159dp">

          <EditText
              android:id="@+id/input_address"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:inputType="textMultiLine"
              android:lines="4"
              android:scrollbars="vertical"
              android:hint="Address" />
      </android.support.design.widget.TextInputLayout-->

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_signup"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary"
            android:padding="12dp"
            android:text="Create Account"
            android:layout_marginBottom="20dp"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout46" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>

